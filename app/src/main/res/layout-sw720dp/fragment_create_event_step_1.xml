<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer_layout_create_event_step_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color">

    <RelativeLayout
        android:id="@+id/inner_layout_1_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/events_inner_layout_margin_bottom"
        android:layout_marginEnd="@dimen/events_inner_layout_margin_right"
        android:layout_marginLeft="@dimen/events_inner_layout_margin_left"
        android:layout_marginRight="@dimen/events_inner_layout_margin_right"
        android:layout_marginStart="@dimen/events_inner_layout_margin_left"
        android:layout_marginTop="@dimen/events_inner_layout_margin_top"
        android:background="@drawable/layout_round_corner_with_outline_grey"
        android:paddingBottom="@dimen/events_inner_layout_padding_bottom">

        <include
            android:id="@+id/steps_header_layout"
            layout="@layout/create_event_steps_header_layout" />

        <View
            android:id="@+id/view_horizontal_line"
            style="@style/Style_CreateEventHorizontalLine"
            android:layout_below="@+id/steps_header_layout" />

        <LinearLayout
            android:id="@+id/layout_event_general_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_horizontal_line"
            android:layout_marginEnd="@dimen/create_event_horizontal_line_margin_right"
            android:layout_marginLeft="@dimen/create_event_horizontal_line_margin_left"
            android:layout_marginRight="@dimen/create_event_horizontal_line_margin_right"
            android:layout_marginStart="@dimen/create_event_horizontal_line_margin_left"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/create_event_general_info_layout_margin_right"
                android:layout_marginRight="@dimen/create_event_general_info_layout_margin_right"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_add_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/label_general_info"
                    android:textColor="@color/label_text_color_1"
                    android:textSize="@dimen/label_text_size_1" />

                <EditText
                    android:id="@+id/edit_event_title"
                    style="@style/Style_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/user_name_edit_text_margin_top"
                    android:hint="@string/hint_event_title_edit_text" />

                <EditText
                    android:id="@+id/edit_spinner_location"
                    style="@style/Style_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/hint_location_edit_text" />

                <EditText
                    android:id="@+id/edit_description"
                    style="@style/Style_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                    android:hint="@string/hint_description_edit_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/create_event_date_layout_margin_left"
                android:layout_marginStart="@dimen/create_event_date_layout_margin_left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_date"
                    android:textColor="@color/label_text_color_1"
                    android:textSize="@dimen/label_text_size_1" />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_label_date_from_margin_top"
                    android:text="@string/label_from"
                    android:textColor="@color/label_text_color_1"
                    android:textSize="@dimen/label_text_size_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/edit_spinner_from_date"
                        style="@style/Style_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_date" />

                    <EditText
                        android:id="@+id/edit_spinner_from_time"
                        style="@style/Style_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_from_time_margin_left"
                        android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_time" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_label_date_to_margin_top"
                    android:text="@string/label_to"
                    android:textColor="@color/label_text_color_1"
                    android:textSize="@dimen/label_text_size_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/edit_spinner_to_date"
                        style="@style/Style_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_date" />

                    <EditText
                        android:id="@+id/edit_spinner_to_time"
                        style="@style/Style_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_from_time_margin_left"
                        android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                        android:layout_weight="1"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_time" />


                </LinearLayout>

                <CheckBox
                    android:id="@+id/check_box_all_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="All Day"
                    android:textColor="@color/label_text_color_1"
                    android:textSize="@dimen/label_text_size_2" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
