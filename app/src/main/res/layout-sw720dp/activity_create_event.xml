<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outer_layout_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    tools:context="com.striketec.fanapp.view.events.CreateEventActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_relative_layout" />

    <RelativeLayout
        android:id="@+id/bottom_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_layout_cancel_next_height"
        android:layout_alignParentBottom="true"
        android:background="@color/screen_background_color">

        <TextView
            android:id="@+id/tv_i_will_do_this_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/events_inner_layout_margin_left"
            android:text="@string/button_text_i_will_do_this_later"
            android:textColor="@color/color_1"
            android:textSize="@dimen/register_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_cancel"
            style="@style/Style_ButtonTransparentBG_Outline_DarkGrey"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_next"
            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/button_next"
            style="@style/Style_ButtonSolidBG"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/login_button_margin_left"
            android:layout_marginRight="@dimen/bottom_layout_next_button_margin_right"
            android:text="@string/button_next" />

    </RelativeLayout>

</RelativeLayout>
