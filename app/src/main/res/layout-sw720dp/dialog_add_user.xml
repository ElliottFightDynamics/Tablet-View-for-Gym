<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer_layout_add_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_round_corner_without_outline"
    android:orientation="horizontal"
    android:padding="@dimen/dialog_company_list_layout_padding"
    android:weightSum="2">

    <TextView
        android:id="@+id/tv_add_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/label_add_user_title"
        android:textColor="@color/label_text_color_1"
        android:textSize="@dimen/label_text_size_1" />


    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_relative_layout"
        android:layout_below="@+id/tv_add_user_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/add_user_left_layout_margin_right"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_take_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/take_picture_image_layout_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_user_image_captured"
                    android:layout_width="@dimen/taken_picture_image_width"
                    android:layout_height="@dimen/taken_picture_image_height"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:id="@+id/outer_layout_take_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/take_picture_layout_margin_left"
                    android:background="@drawable/layout_round_corner_with_outline_red"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/take_picture_layout_padding_bottom"
                    android:paddingLeft="@dimen/take_picture_layout_padding_left"
                    android:paddingRight="@dimen/take_picture_layout_padding_right"
                    android:paddingTop="@dimen/take_picture_layout_padding_top">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_camera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/take_picture_text_view_margin_left"
                        android:text="@string/button_take_picture"
                        android:textColor="@color/color_1"
                        android:textSize="@dimen/register_button_text_size" />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/edit_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_name_edit_text_margin_top"
                android:hint="@string/hint_user_name_edit_text"
                android:nextFocusDown="@+id/edit_email"
                android:singleLine="true"
                android:textColor="@color/label_text_color_2"
                android:textColorHint="@color/label_text_color_2"
                android:textSize="@dimen/edit_text_size_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/add_user_right_layout_margin_left"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/email_edit_text_margin_top"
                android:hint="@string/hint_email_edit_text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="@color/label_text_color_2"
                android:textColorHint="@color/label_text_color_2"
                android:textSize="@dimen/edit_text_size_1" />

            <EditText
                android:id="@+id/edit_spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/label_gender"
                android:singleLine="true"
                android:textColor="@color/label_text_color_2"
                android:textColorHint="@color/label_text_color_2"
                android:textSize="@dimen/edit_text_size_1" />


            <EditText
                android:id="@+id/edit_spinner_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/label_date_of_birth"
                android:singleLine="true"
                android:textColor="@color/label_text_color_2"
                android:textColorHint="@color/label_text_color_2"
                android:textSize="@dimen/edit_text_size_1" />

            <EditText
                android:id="@+id/edit_spinner_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/label_weight"
                android:singleLine="true"
                android:textColor="@color/label_text_color_2"
                android:textColorHint="@color/label_text_color_2"
                android:textSize="@dimen/edit_text_size_1" />

            <EditText
                android:id="@+id/edit_spinner_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_user_email_edit_text_margin_top"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/label_height"
                android:singleLine="true"
                android:textColor="@color/label_text_color_2"
                android:textColorHint="@color/label_text_color_2"
                android:textSize="@dimen/edit_text_size_1" />

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/cancel_ok_layout_margin_top">

        <Button
            android:id="@+id/button_cancel"
            style="@style/Style_ButtonTransparentBG_Outline_DarkGrey"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_register"
            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/button_register"
            style="@style/Style_ButtonSolidBG"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/login_button_margin_left"
            android:text="@string/button_register" />

    </RelativeLayout>


</RelativeLayout>
