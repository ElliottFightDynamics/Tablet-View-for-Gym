<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Style_TextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<imNnamename="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!--<imNnamename="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Login Button -->
    <style name="Style_ButtonSolidBG">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_round_corner_solid_background</item>
        <item name="android:textColor">@color/button_text_color_2</item>
        <item name="android:textSize">@dimen/register_button_text_size</item>
        <item name="android:paddingBottom">@dimen/register_button_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/register_button_padding_left</item>
        <item name="android:paddingRight">@dimen/register_button_padding_right</item>
        <item name="android:paddingTop">@dimen/register_button_padding_top</item>
    </style>

    <style name="Style_ButtonTransparentBG_Outline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_round_corner_with_outline_grey_dark</item>
        <item name="android:textColor">@color/button_text_color_1</item>
        <item name="android:textSize">@dimen/register_button_text_size</item>
        <item name="android:paddingBottom">@dimen/register_button_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/register_button_padding_left</item>
        <item name="android:paddingRight">@dimen/register_button_padding_right</item>
        <item name="android:paddingTop">@dimen/register_button_padding_top</item>
    </style>


    <!-- Tab Layout style -->
    <style name="Style_TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@color/color_1</item>
        <item name="tabIndicatorHeight">@dimen/dimen_tab_indicator_height</item>
    </style>

    <style name="Style_EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/label_text_color_2</item>
        <item name="android:textColorHint">@color/label_text_color_2</item>
        <item name="android:textSize">@dimen/edit_text_size_1</item>
    </style>
</resources>
