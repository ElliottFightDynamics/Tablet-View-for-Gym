<LinearLayout android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/session_selected"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.efd.striketectablet.customview.CustomTextView
                android:id="@+id/session_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingLeft="20dp"
                android:textColor="@color/punches_text_color"
                android:text="SESSION 1"/>

            <com.efd.striketectablet.customview.CustomTextView
                android:id="@+id/session_duration"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingRight="20dp"
                android:textColor="@color/punches_text_color"
                android:text="25MIN"
                android:gravity="end"/>

        </LinearLayout>
        
        <com.efd.striketectablet.customview.CustomTextView
            android:layout_marginTop="5dp"
            android:id="@+id/training_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4:50PM-08/12/12"
            android:textColor="@color/white"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:gravity="center_vertical"
            android:background="@color/list_odd_item">

            <com.efd.striketectablet.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:textColor="@color/punches_text_color"
                android:text="SESSION 1"/>

            <com.efd.striketectablet.customview.CustomTextView
                android:id="@+id/total_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:text="250"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:gravity="center_vertical">

            <com.efd.striketectablet.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:textColor="@color/punches_text_color"
                android:text="AVG. SPEED"/>

            <com.efd.striketectablet.customview.CustomTextView
                android:id="@+id/avgspeed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="20dp"
                android:textColor="@color/speed_text_color"
                android:text="24 MPH"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell_height"
            android:gravity="center_vertical"
            android:background="@color/list_odd_item">

            <com.efd.striketectablet.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:textColor="@color/punches_text_color"
                android:text="AVG. FORCE"/>

            <com.efd.striketectablet.customview.CustomTextView
                android:id="@+id/avgforce"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="20dp"
                android:textColor="@color/force_text_color"
                android:text="250 LBS"
                android:gravity="end"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>