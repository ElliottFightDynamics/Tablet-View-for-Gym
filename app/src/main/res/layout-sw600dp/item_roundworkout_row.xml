<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roundparent"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <com.efd.striketectablet.customview.CustomTextView
                android:id="@+id/roundname"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textColor="@color/punches_text_color"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/trainingstats_btn_fill"
                android:layout_centerInParent="true"
                android:text="@string/round" />

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/addround"
                android:src="@drawable/plus_inactive"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <ListView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/setlistview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </ListView>

        <com.efd.striketectablet.customview.CustomTextView
            android:id="@+id/add_combo"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="@string/addcombo"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/positive_big_btn"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>



</LinearLayout>
