<LinearLayout android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="40dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.efd.striketectablet.customview.CustomTextView
        android:id="@+id/num"
        android:layout_width="25dp"
        android:layout_height="@dimen/cell_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="1."
        android:textColor="@color/num_textcolor"
        android:textSize="20sp" />

    <com.efd.striketectablet.customview.CustomTextView
        android:id="@+id/punch_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/cell_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="STRAIGHT"
        android:singleLine="true"
        android:textColor="@color/punches_text_color"
        android:textSize="18sp" />

    <com.efd.striketectablet.customview.CustomTextView
        android:id="@+id/avg_speed"
        android:layout_width="120dp"
        android:layout_height="@dimen/cell_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="199.2MPH"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.efd.striketectablet.customview.CustomTextView
        android:id="@+id/avg_force"
        android:layout_width="120dp"
        android:layout_height="@dimen/cell_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|end"
        android:singleLine="true"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="199.2LBS"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.efd.striketectablet.customview.CustomTextView
        android:id="@+id/punch_count"
        android:layout_width="80dp"
        android:layout_height="@dimen/cell_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|end"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:text="199HITS"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.efd.striketectablet.customview.CustomTextView
        android:id="@+id/punch_effective"
        android:layout_width="100dp"
        android:layout_height="@dimen/cell_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|end"
        android:paddingRight="30dp"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:text="199HITS"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>