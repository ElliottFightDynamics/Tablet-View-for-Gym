<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarsize">

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_edit_icon"
            android:layout_toLeftOf="@+id/text_edit"/>

        <com.efd.striketectablet.customview.CustomTextView
            android:id="@+id/text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textColor="@color/punches_text_color"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/connectsensor"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/user_photo">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/left_arrow" />

                        <com.efd.striketectablet.customview.CustomButton
                            android:id="@+id/connect_button"
                            android:layout_width="192dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/connect_button_bg"
                            android:text="@string/connectsensor"
                            android:textAllCaps="true"
                            android:textColor="@color/orange"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/totaltimetrained"
                        android:layout_width="350dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_marginTop="100dp"
                        android:layout_toRightOf="@+id/user_photo"
                        android:background="@drawable/bg_fill">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="40dp"
                            android:text="@string/total_timetrained"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:text="24:12:21 PTS"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/totaldaytrained"
                        android:layout_width="350dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/totaltimetrained"
                        android:layout_marginLeft="-55dp"
                        android:layout_toRightOf="@+id/user_photo">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:id="@+id/customTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="40dp"
                            android:text="@string/total_daystrained"
                            android:textColor="@color/speed_text_color"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:text="345DAYS"
                            android:textColor="@color/speed_text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lastupdatetrained"
                        android:layout_width="350dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/totaldaytrained"
                        android:layout_marginLeft="-70dp"
                        android:layout_toRightOf="@+id/user_photo"
                        android:background="@drawable/bg_fill">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="40dp"
                            android:text="@string/last_trained"
                            android:textColor="@color/punches_text_color"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:text="SEPTEMBER 17, 2017"
                            android:textColor="@color/punches_text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/user_photo"
                        android:layout_width="206dp"
                        android:layout_height="180dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/train1"
                        app:siShape="@drawable/profile_overlay" />

                </RelativeLayout>

                <com.efd.striketectablet.customview.CustomTextView
                    android:id="@+id/profile_name_view"
                    android:layout_width="410dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg_fill"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="GENNADY GOLOVKIN"
                    android:textColor="@color/punches_text_color"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@drawable/line_bg" />


                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="20dp">-->
                <!--<View-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/left_line"/>-->
                <!---->
                <!--<View-->
