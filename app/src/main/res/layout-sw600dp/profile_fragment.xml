                <com.efd.striketectablet.customview.CustomTextView
                    android:id="@+id/details_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="KAZAHSTAN, 32 YO, NOVICE, TRADITIONAL STYLE"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="WEIGHT" />

                        <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                            android:id="@+id/weight_view"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="120"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="LBS" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="HEIGHT" />

                        <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                            android:id="@+id/height_view"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="120"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="INCH" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="GLOVES" />

                        <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                            android:id="@+id/gloves_view"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="120"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="OZ" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="REACH" />

                        <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                            android:id="@+id/reach_view"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="120"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="INCH" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/separator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/deletedatabtn"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_bg"
            >

            <com.efd.striketectablet.customview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deletedata"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>



        <com.efd.striketectablet.customview.CustomTextView
            android:id="@+id/mail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GGG.GOLOVKIN@GMAIL.COM"
            android:textColor="@color/punches_text_color"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/logoutbtn"/>

