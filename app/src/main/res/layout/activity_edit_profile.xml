<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="20dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.efd.striketectablet.activity.profile.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarsize"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/close" />

        <com.efd.striketectablet.customview.CustomTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="@string/edit_profile"
            android:textColor="@color/header_text_color_blue"
            android:textSize="@dimen/title_textsize" />

        <com.efd.striketectablet.customview.HexagonButton
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/save"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            app:fill="false"
            app:hexagon_color="@color/orange"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/separator" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="229dp"
                android:layout_height="200dp">

                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:id="@+id/user_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/empty_profile"
                    app:siShape="@drawable/profile_overlay"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <com.efd.striketectablet.customview.HexagonButton
                    android:id="@+id/addphoto"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="1dp"
                    android:text="@string/addphoto"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:fill="false"
                    app:hexagon_color="@color/btn_color"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <com.efd.striketectablet.customview.HexagonButton
                android:layout_marginTop="20dp"
                android:id="@+id/editphoto"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="1dp"
                android:text="@string/editphoto"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fill="false"
                app:hexagon_color="@color/btn_color"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:background="@drawable/trainingstats_btn_fill"
                        android:orientation="horizontal">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/personal"
                            android:textAllCaps="true"
                            android:textColor="@color/punches_text_color"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/profile_rightline"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomEditText
                            android:id="@+id/fname"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:hint="@string/fistname"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_color"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-10dp"
                            android:background="@drawable/sensor_edit_id" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomEditText
                            android:id="@+id/lname"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:hint="@string/lastname"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_color"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-10dp"
                            android:background="@drawable/sensor_edit_id" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/country_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:background="@null"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="100dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="bottom">

                        <com.efd.striketectablet.customview.CustomEditText
                            android:id="@+id/zip"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:hint="@string/zipcode"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_color"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-10dp"
                            android:background="@drawable/sensor_edit_id" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:background="@drawable/trainingstats_btn_fill"
                        android:orientation="horizontal">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/birthday"
                            android:textAllCaps="true"
                            android:textColor="@color/punches_text_color"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/profile_rightline"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/day_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/month_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/year_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/gender_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:background="@drawable/trainingstats_btn_fill"
                        android:orientation="horizontal">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/training"
                            android:textAllCaps="true"
                            android:textColor="@color/punches_text_color"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/profile_rightline"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/skilllevel_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/stance_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="WEIGHT" />

                        <Spinner
                            android:id="@+id/weight_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="120"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:textSize="45sp" />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="LBS" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="HEIGHT" />

                        <Spinner
                            android:id="@+id/height_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="120"
                            android:background="@null"
                            android:textColor="@color/white"
                            />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="INCH" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="GLOVES" />

                        <Spinner
                            android:id="@+id/gloves_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="120"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:textSize="45dp" />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="OZ" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_label"
                            android:text="REACH" />

                        <Spinner
                            android:id="@+id/reach_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="120"
                            android:background="@null"
                            android:textColor="@color/white"
                            android:textSize="40sp" />

                        <com.efd.striketectablet.customview.CustomTextView
                            style="@style/dashboard_setting_stat_label"
                            android:text="INCH" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|center_vertical"
                        android:background="@drawable/trainingstats_btn_fill"
                        android:orientation="horizontal">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/security"
                            android:textAllCaps="true"
                            android:textColor="@color/punches_text_color"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/profile_rightline"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/dropdown">

                        <Spinner
                            android:id="@+id/security_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawSelectorOnTop="true"
                            android:gravity="left|center_vertical"
                            android:background="@null"
                            android:nextFocusDown="@+id/registration_accnt_setup_next_button"
                            android:prompt="@string/security_question_spinner_prompt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="bottom">

                        <com.efd.striketectablet.customview.CustomEditText
                            android:id="@+id/answer"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:hint="@string/securityanswer"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/hint_color"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-10dp"
                            android:background="@drawable/sensor_edit_id" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:layout_gravity="bottom">

                        <com.efd.striketectablet.customview.CustomTextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:text="@string/email"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-10dp"
                            android:background="@drawable/sensor_edit_id" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        >

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</LinearLayout>
