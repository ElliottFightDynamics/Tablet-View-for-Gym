<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp">

        <com.efd.striketectablet.customview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="@string/training_stats_title"
            android:textColor="@color/header_text_color_blue"
            android:textSize="35sp" />


        <ImageView
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_share" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/cell_height"
                android:layout_marginTop="15dp">

                <com.efd.striketectablet.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/rectangle_bg"
                    android:gravity="center"
                    android:text="@string/training_quality"
                    android:textColor="@color/force_text_color"
                    android:textSize="@dimen/cell_textsize" />

                <com.efd.striketectablet.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/rectangle_bg"
                    android:gravity="center"
                    android:text="@string/training_bestpunch"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/cell_textsize" />

                <com.efd.striketectablet.customview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_bg"
                    android:gravity="center"
                    android:text="@string/today_punches"
                    android:textColor="@color/punches_text_color"
                    android:textSize="@dimen/cell_textsize"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2">

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/percent"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true">

                        <com.efd.striketectablet.customview.CustomCircleView
                            android:id="@+id/stats_percent"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_centerHorizontal="true" />

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:id="@+id/stats_percent_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="94%"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/force_text_color"
                                android:textSize="50sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@drawable/line"/>

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:layout_marginTop="8dp"
                                android:id="@+id/stats_fatigue_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:text="64"
                                android:textColor="@color/speed_text_color"
                                android:textSize="50sp" />

                        </LinearLayout>


                    </RelativeLayout>


                    <com.efd.striketectablet.customview.CustomTextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/percent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/rectangle_bg"
                        android:gravity="center"
                        android:text="@string/fatigue"
                        android:textColor="@color/speed_text_color"
                        android:textSize="@dimen/cell_textsize" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:id="@+id/bestpunch_speed"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="298.5"
                                android:textColor="@color/orange"
                                android:textSize="30sp" />

                            <com.efd.striketectablet.customview.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="MPH"
                                android:textColor="@color/orange"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/vertical_line_big" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:id="@+id/bestpunch_force"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="478.2"
                                android:singleLine="true"
                                android:textColor="@color/orange"
                                android:textSize="30sp" />

                            <com.efd.striketectablet.customview.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="LBS"
                                android:textColor="@color/orange"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_height">

                        <!--<com.efd.striketectablet.customview.CustomTextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="@string/today_punches"-->
                        <!--android:textColor="@color/punches_text_color"-->
                        <!--android:gravity="center"-->
                        <!--android:textSize="16sp"-->
                        <!--android:background="@drawable/rectangle_bg"/>-->

                        <com.efd.striketectablet.customview.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_bg"
                            android:gravity="center"
                            android:text="@string/today_time"
                            android:textColor="@color/punches_text_color"
                            android:textSize="@dimen/cell_textsize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:id="@+id/bestpunch_punches"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="13:43:53"
                                android:singleLine="true"
                                android:textColor="@color/punches_text_color"
                                android:textSize="30sp" />

                            <com.efd.striketectablet.customview.CustomTextView
                                android:id="@+id/customTextView2"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:text="ACTIVE"
                                android:textColor="@color/punches_text_color"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/vertical_line_big" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:id="@+id/bestpunch_damage"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="13:43:53"
                                android:singleLine="true"
                                android:textColor="@color/punches_text_color"
                                android:textSize="30sp" />

                            <com.efd.striketectablet.customview.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:text="INACTIVE"
                                android:textColor="@color/punches_text_color"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="1,843"
                                android:textColor="@color/punches_text_color"
                                android:textSize="30sp" />

                            <com.efd.striketectablet.customview.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="HITS"
                                android:singleLine="true"
                                android:textColor="@color/punches_text_color"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.efd.striketectablet.customview.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cell_height"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/rectangle_bg"
                        android:gravity="center"
                        android:text="@string/stats_damage"
                        android:textColor="@color/punches_text_color"
                        android:textSize="@dimen/cell_textsize" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="2,985"
                                android:textColor="@color/punches_text_color"
                                android:textSize="30sp" />

                            <com.efd.striketectablet.customview.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="LBS"
                                android:textColor="@color/punches_text_color"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/trainingstats_left_line"
                    android:layout_gravity="center_vertical"/>


                <com.efd.striketectablet.customview.CustomTextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/trainingstats_btn_fill"
                    android:gravity="center"
                    android:text="@string/punch_rank"
                    android:textColor="@color/punches_text_color"
                    android:textSize="20sp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/trainingstats_right_line"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/punchrank_listview"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                    />

                    <View
                        android:id="@+id/speedselect"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        />

                    <View
                        android:id="@+id/forceselect"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"/>

                    <View
                        android:id="@+id/countselect"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"/>

                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/training_left_image"
                    android:layout_gravity="center_vertical"/>


                <com.efd.striketectablet.customview.CustomTextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/trainingstats_btn_fill"
                    android:gravity="center"
                    android:text="@string/common_stats"
                    android:textColor="@color/punches_text_color"
                    android:textSize="20sp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/training_right_image"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ListView
                android:id="@+id/commonstats_listview"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/separator" />


</LinearLayout>
