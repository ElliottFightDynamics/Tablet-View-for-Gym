<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="20dp"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarsize">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/close" />

        <com.efd.striketectablet.customview.CustomTextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="@string/new_set_title"
            android:textColor="@color/header_text_color_blue"
            android:textSize="@dimen/title_textsize" />

        <com.efd.striketectablet.customview.CustomTextView
            android:id="@+id/savebtn"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/trainingstats_btn_fill"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/separator" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/edit_bg"
            android:layout_alignParentBottom="true"/>

        <com.efd.striketectablet.customview.CustomEditText
            android:id="@+id/workout_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/workout_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:background="@color/transparent"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/trainingstats_left_line"/>

        <com.efd.striketectablet.customview.CustomTextView
            android:textColor="@color/punches_text_color"
            android:layout_width="280dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/trainingstats_btn_fill"
            android:text="@string/workoutplan"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/trainingstats_right_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/workflow_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/round_parent"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_btn"
                    android:text="@string/round" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp">

                    <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                        android:id="@+id/round_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:editable="false"
                        android:gravity="center"
                        android:text="47:50"
                        android:textColor="@color/white"
                        android:textSize="@dimen/spinner_textsize" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:src="@drawable/spinner_arrow" />

                </RelativeLayout>

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_label"
                    android:text="@string/min_sec" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rest_parent"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_btn"
                    android:text="@string/rest" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp">

                    <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                        android:id="@+id/rest_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:editable="false"
                        android:gravity="center"
                        android:text="47:50"
                        android:textColor="@color/white"
                        android:textSize="@dimen/spinner_textsize" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:src="@drawable/spinner_arrow" />

                </RelativeLayout>

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_label"
                    android:text="@string/min_sec" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prepare_parent"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_btn"
                    android:text="@string/prepare" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp">

                    <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
