                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:editable="false"
                        android:gravity="center"
                        android:text="47:50"
                        android:textColor="@color/white"
                        android:textSize="@dimen/spinner_textsize" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:src="@drawable/spinner_arrow" />

                </RelativeLayout>

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_label"
                    android:text="@string/min_sec" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/warning_parent"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_btn"
                    android:text="@string/warning" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp">

                    <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                        android:id="@+id/warning_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:editable="false"
                        android:gravity="center"
                        android:text="47:50"
                        android:textColor="@color/white"
                        android:textSize="@dimen/spinner_textsize" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:src="@drawable/spinner_arrow" />

                </RelativeLayout>

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_label"
                    android:text="@string/min_sec" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_btn"
                    android:text="GLOVES" />

                <Spinner
                    android:id="@+id/glove_spinner"
                    style="@style/dashboard_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:prompt="@string/glove_type_spinner_prompt" />

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_label"
                    android:text="OZ" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_parent"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <com.efd.striketectablet.customview.CustomTextView
                    style="@style/preset_btn"
                    android:text="TOTAL TIME" />

                <com.efd.striketectablet.customview.CustomTextViewFontEfDigit
                    android:id="@+id/total_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginTop="7dp"
                    android:editable="false"
                    android:gravity="center"
                    android:text="00:00:00"
                    android:textColor="@color/punches_text_color"
                    android:textSize="@dimen/spinner_textsize" />
            </LinearLayout>

        </LinearLayout>

