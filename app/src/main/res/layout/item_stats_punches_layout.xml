<RelativeLayout android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="wrap_content"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/today_itembgcolor">

            <com.efd.striketectablet.customview.CustomTextView
                android:layout_marginLeft="20dp"
                android:id="@+id/punch_type"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="RIGHT STRAIGHT"
                android:textColor="@color/punches_text_color"
                android:textSize="14sp" />

            <com.efd.striketectablet.customview.CustomTextView
                android:id="@+id/speed_value"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:text="27.2 MPH"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.efd.striketectablet.customview.CustomTextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/force_value"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="369 LBS"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/missedview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.5"/>

            <com.efd.striketectablet.customview.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:text="MISSED"
                android:textColor="@color/speed_text_color"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="33dp"
        android:layout_height="33dp"
        >

        <ImageView
            android:id="@+id/result"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_btn"/>

        <com.efd.striketectablet.customview.CustomTextView
            android:id="@+id/punch_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SR"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    </RelativeLayout>



</RelativeLayout>