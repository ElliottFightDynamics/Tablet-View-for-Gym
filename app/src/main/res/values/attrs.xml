<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTextView">
        <attr name="customFont" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="HexagonButton">
        <attr name="hexagon_color" format="color" />
        <attr name="angle_coef" format="integer" />
        <attr name="fill" format="boolean" />
        <attr name="hb_type" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="none" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="HexagonImageButton">
        <attr name="hib_hexagon_color" format="color" />
        <attr name="hib_angle_coef" format="integer" />
        <attr name="hib_fill" format="boolean" />
    </declare-styleable>

    <declare-styleable name="HexagonLayout">
        <attr name="hrl_hexagon_color" format="color" />
        <attr name="hrl_angle_coef" format="integer" />
        <attr name="hrl_fill" format="boolean" />
        <attr name="hrl_type" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="none" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="HexagonRadioButton">
        <attr name="hrb_type" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="middle" value="2" />
        </attr>
        <attr name="hrb_divider" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="both" value="2" />
            <enum name="none" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TrainingProgressBarchartView">
        <attr name="drawLabelBackground" format="boolean"/>

        <attr name="showGrid" format="boolean"/>
        <attr name="gridHorizontalLines" format="integer"/>
        <attr name="gridVerticalLines" format="integer"/>
        <attr name="gridLineSize" format="integer"/>
        <attr name="gridPaddingTop" format="integer"/>
        <attr name="gridColor" format="color"/>

        <attr name="showOutline" format="boolean"/>
        <attr name="outlineColor" format="color"/>
    </declare-styleable>
</resources>